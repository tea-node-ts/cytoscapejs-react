{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "declaration": true,
      "module": "es6",
      "moduleResolution": "node",
      "noEmit": true,
      "resolveJsonModule": true,
      "outDir": "./dist/",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es5",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}